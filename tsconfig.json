{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./src/wikijs/sdl/schema.graphql"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}